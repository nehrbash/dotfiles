(defwidget notif-toggle []
  (button
    :class "notif-toggle module"
    :onclick "sleep .15; swaync-client -t"
    :onrightclick "swaync-client -d"
    {notif.Icon}))

(defwidget left []
  (box
    :space-evenly false
    :halign "start"
    (workspaces)
    (music-module)))

(defwidget right []
  (box
    :space-evenly false
    :halign "end"
    (pomo)
    (volume-module)
    (bluetooth)
    (net)
    (sys)))

(defwidget center [notif_class]
  (box
    :class {notif_class}
    :space-evenly false
    :halign "center"
    (clock_module)
    (notif-toggle)))

(defwidget bar []
  (centerbox
    :class "bar"
    (left)
    (center :notif_class {notif.Class})
    (right)))

(defwindow bar
    :monitor 0
    :geometry (geometry :x "0%"
      :y "0.2%"
      :width "95%"
      :height "32px"
      :anchor "top center")
    :stacking "fg"
    :exclusive true
  (bar))

(defwindow bar2
    :monitor 1
    :geometry (geometry :x "0%"
      :y "0.2%"
      :width "95%"
      :height "28px"
      :anchor "top center")
    :stacking "fg"
    :exclusive true
  (bar))
