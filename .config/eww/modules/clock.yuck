(defwidget clock_module []
  (eventbox
   :class "clock"
   :onclick "${EWW_CMD} open --toggle control-menu-closer --screen ${monitor.id}; ${EWW_CMD} open --toggle control-menu --screen ${monitor.id}"
          (box
           :class "module"
        :space-evenly false
        (label
          :text {time.day}
          )
        (label
          :text {time.hour}
          )
        (label
          :text ":"
          )
        (label
          :text "${time.minute}"
          )
        )))
