(defwidget quote []
  (box
    :class "ct_box"
    :orientation "v"
	:vexpand "true"
	:space-evenly "false"
    (box
	  :orientation "h"
	  :vexpand "true"
	  :valign "start"
      (label
        :class "quote"
        :justify "center"
        :wrap true
        :text "${quote.quote}"))
    (box
      :orientation "h"
      (label
        :class "author"
        :xalign 0.9
        :text "-  ${quote.author}"))
	))
