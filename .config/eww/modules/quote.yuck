(defwidget quote []
  (box
    :class "ct_box"
    :orientation "v"
    :space-evenly "false"
    :vexpand "true"
    :halign "center"
    (box
      (label
        :class "quote"
        :justify "center"
        :wrap true
        :text "${quote.quote}"))
    (box
      :vexpand "true"
      :orientation "h"
      (label
        :class "author"
        :xalign 0.9
        :text "-  ${quote.author}"))))
