#!/bin/bash

pid_file="/tmp/swayidle.pid"

# Set the appropriate icon based on the existence of the PID file
if [ -f "$pid_file" ]
then
    icon=""
else
    icon=""
fi

off() {
    swayidle -w \
             timeout 275 'notify-send "Inhibitor" "Screen Off in 15 Sec"'\
             timeout 300 'swaylock-fancy &' \
             timeout 600 'hyprctl dispatch dpms off' \
             resume 'hyprctl dispatch dpms on' \
             before-sleep 'swaylock-fancy' &

    echo $! > "$pid_file"

    notify-send "Inhibitor" "Deactivated"
    eww update inhibitor=$icon
}

on() {
    pkill -F "$pid_file"
    rm -f "$pid_file"

    notify-send "Inhibitor" "Activated"
    eww update inhibitor=$icon
}

toggle() {
    if [ -f "$pid_file" ]
    then
        on
    else
        off
    fi
}

case $1 in
    "toggle")
        toggle
        ;;
    "off")
        off
        ;;
    "on")
        on
        ;;
    *)
        echo $icon
        ;;
esac
