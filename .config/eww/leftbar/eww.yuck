(defvar IMAGE "images/profile.png")
(defpoll username :interval "48h"  "whoami")

(defpoll pkgs :interval "1h" "pacman -Qq | wc -l")
(defpoll pkgs_up :interval "1h" "checkupdates | wc -l")

(defpoll memory :interval "15s" "scripts/memory")
(defpoll cpu :interval "15s" "scripts/cpu")


(defwidget profile []
			(box :class "bg_alt profile_box" :orientation "v" :spacing 20 :space-evenly "false" :vexpand "false" :hexpand "false" :height 100
				(box :class "profile_picture" :halign "center" :style "background-image: url('${IMAGE});")
				(label :class "profile_greeting" :halign "center" :wrap "true" :limit-width 25 :text username)))
                

